{
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "page.js"
      ]
    },
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Extension to support JobCTRL automatic rules to work with Google Chrome.",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "manifest_version": 3,
  "name": "JobCTRL Extension",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "scripting"
  ],
  "version": "2.0.0",
  "web_accessible_resources": [
    {
      "resources": [
        "pageWorld.js",
        "*.map"
      ],
      "matches": [
        "*://mail.google.com/*"
      ]
    }
  ]
}
