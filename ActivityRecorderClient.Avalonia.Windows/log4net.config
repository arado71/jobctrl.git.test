<?xml version="1.0" encoding="utf-8"?>
<log4net>
	<!-- Main rolling log -->
	<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="Logs\\JobCTRL.log" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="5" />
		<staticLogFileName value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%2thread] %-5level %24.24logger{1} - %message%newline" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="FATAL" />
		</filter>
	</appender>

	<!-- Custom debug log -->
	<appender name="CustomRollingDebugLogFileAppender" type="Tct.ActivityRecorderClient.Logging.CustomRollingDebugLogFileAppender, Tct.ActivityRecorderClient">
		<file type="log4net.Util.PatternString" value="Logs\\JobCTRL-Debug.log" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="1" />
		<staticLogFileName value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%2thread] %-5level %24.24logger{1} - %message%newline" />
		</layout>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="RollingLogFileAppender" />
		<appender-ref ref="CustomRollingDebugLogFileAppender" />
	</root>
</log4net>
