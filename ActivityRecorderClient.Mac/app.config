<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net debug="false" xsi:noNamespaceSchemaLocation="..\Log4Net\log4net.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="${HOME}/Library/Logs/JobCTRL/JobCTRL.log" />
			<appendToFile value="true" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="50MB" />
			<rollingStyle value="Size" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%2.2thread] %-5level %24.24logger{1} - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="INFO" />
			<appender-ref ref="RollingLogFileAppender" />
		</root>
	</log4net>
	<appSettings>
	</appSettings>
	<system.serviceModel>
		<client>
			<endpoint address="https://backoffice.jobctrl.com:443/JobCTRL/" contract="ActivityRecorderServiceReference.IActivityRecorder" binding="basicHttpBinding" bindingConfiguration="BasicHttpBindingWithPass" name="HttpBinding_IActivityRecorder" />
		</client>
		<bindings>
			<basicHttpBinding>
				<binding name="BasicHttpBindingWithPass" closeTimeout="00:01:00" openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:01:00" allowCookies="false" bypassProxyOnLocal="false" hostNameComparisonMode="StrongWildcard" maxBufferSize="5000001" maxBufferPoolSize="12000001"
					maxReceivedMessageSize="5000001" messageEncoding="Text" textEncoding="utf-8" transferMode="Buffered" useDefaultWebProxy="true">
					<readerQuotas maxDepth="32" maxStringContentLength="8192" maxArrayLength="16384" maxBytesPerRead="4096" maxNameTableCharCount="16384" />
					<security mode="Transport">
						<transport clientCredentialType="Basic" />
					</security>
				</binding>
			</basicHttpBinding>
		</bindings>
		<behaviors>
			<endpointBehaviors>
				<behavior name="CertValidation_Behav">
					<dataContractSerializer maxItemsInObjectGraph="2147483647" />
					<clientCredentials>
						<serviceCertificate>
							<authentication certificateValidationMode="None" />
						</serviceCertificate>
					</clientCredentials>
				</behavior>
			</endpointBehaviors>
		</behaviors>
	</system.serviceModel>
	<runtime>
		<!--Thanks to a CilckOnce bug in the FW we have to use it...-->
		<legacyUnhandledExceptionPolicy enabled="1" />
	</runtime>
</configuration>